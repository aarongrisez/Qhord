<DefaultApplicationScreen>:
    DefaultApplication:
    
<WelcomeScreen>:
    name: "welcome"
    BoxLayout:
        Label:
            text: "Welcome to Qhord!"
        Button:
            text: "Go to Main Application"
            on_press: print("butts")
            on_release: app.root.current = 'main'

<Key>:
#Key widget inherits from Button, every pitch is represented by a key. Every key should be the child of DefaultApplication
    canvas.after:
        Color:
            rgba: app.colorScheme.ButtonFill
        Ellipse:
            size: self.size
            pos: self.pos
    pitch_class: 0
    on_press: self.parent.parent.measure_system(self.pitch_class)
    alpha: 0.

<DefaultApplication>:
#Main widget on DefaultApplication Screen. Default layout for a 12 pitch system
    name: 'main'
    FloatLayout:
        colorScheme: app.colorScheme
        canvas.before:
            Color:
                rgba: app.colorScheme.Background
            Rectangle:
                size: root.size
        outputLabels: ["None yet", "None yet"]
        Label:
            pos_hint: {'center_x': .4, 'center_y': .7}
            text: "Pressed " + str(root.outputLabels[0])
        Label:
            pos_hint: {'center_x': .6, 'center_y': .7}
            text: "Heard " + str(root.outputLabels[1])
        Key:
            id: 0
            pitch_class: 0
            background_color: 1, 0, 0, self.alpha
            pos_hint: {'center_x':.1 * 2 - .05, 'center_y': .5582575}
            text: "C"
            size_hint_x: None
            size_hint_y: None
            width: '40dp'
            height: '40dp'
