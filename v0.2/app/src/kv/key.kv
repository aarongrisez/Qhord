<Key>:
#Key widget inherits from Button, every pitch is represented by a key. Every key should be the child of DefaultApplication
    canvas.before:
        Color:
            rgba: app.colorScheme.ButtonEdge
        Ellipse:
            size: (self.size[0] * 1.1, self.size[1] * 1.1)
            pos: (self.pos[0] - self.size[0] * .05, self.pos[1] - self.size[1] * .05)
    canvas.after:
        Color:
            rgba: (app.colorScheme.ButtonFill[0], app.colorScheme.ButtonFill[1], app.colorScheme.ButtonFill[2], self.alpha)
        Ellipse:
            size: self.size
            pos: self.pos
    pitch_class: 0
    on_press: self.parent.parent.parent.measure_system(self.pitch_class)
    alpha: 0.
    background_color: 0, 0, 0, 0
    size_hint: None, None
    size: app.widgetSizes.KEY_WIDTH, app.widgetSizes.KEY_HEIGHT


