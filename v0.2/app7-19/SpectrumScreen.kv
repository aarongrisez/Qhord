<SpectrumSlider@Slider>:
    on_value: self.parent.parent.parent.update_spectrum()

<SpectrumScreen>:
    BoxLayout:
        canvas.before:
            Color:
	        	rgba: app.colorScheme.Background
            Rectangle:
                size: self.size
                pos: self.pos
 
        orientation: 'vertical'
        Button:
            size_hint: 1, .2
            text: "Apply Spectrum" 
            on_press: app.initializeApp()
            on_release: app.root.current = 'defaultApplicationScreen'
            on_release: app.app_start()
        Label:
            size_hint: 1, .1
            id: spectrumLabel
            text: str(root.spectrum)
        BoxLayout:
            size_hint: 1, .3
            SpectrumSlider:
                id: 0
                orientation: 'vertical'
