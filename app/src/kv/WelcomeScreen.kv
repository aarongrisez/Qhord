<WelcomeScreen>:
    FloatLayout:
        canvas.before:
            Color:
	        	rgba: app.colorScheme.Background
            Rectangle:
                size: self.size
                pos: self.pos
        orientation: 'vertical'
        Image:
            source: './src/assets/images/welcome_logo.png'
            size_hint: .25, None
            pos_hint: {'center_x': .5, 'center_y': .7}
        Button:
            size_hint: None, None
            size: .4 * app.winSize[0], .15 * app.winSize[1]
            pos_hint: {'center_x': .5, 'center_y': .4}
            text: 'Enter App'
#            on_press: root.current = 'spectrumScreen'
            on_press: self.parent.parent.parent.current = 'hamiltonianScreen'
        Button:
            size_hint: None, None
            size: .4 * app.winSize[0], .15 * app.winSize[1]
            pos_hint: {'center_x': .5, 'center_y': .2}
            text: "Credits"
            on_release: self.parent.parent.parent.current = 'creditsScreen' 
