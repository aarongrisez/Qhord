<WelcomeScreen>:
    FloatLayout:
        canvas.before:
            Color:
	        	rgba: app.colorScheme.Background
            Rectangle:
                size: self.size
                pos: self.pos
        orientation: 'vertical'
        Image:
            source: './src/assets/images/welcome_logo.png'
            size_hint: .25, None
            pos_hint: {'center_x': .5, 'center_y': .7}
        Button:
            size_hint: None, None
            size: .3 * app.winSize[0], .1 * app.winSize[1]
            pos_hint: {'center_x': .5, 'center_y': .43}
            text: 'Play'
#            on_press: app.root.current = 'spectrumScreen'
            on_press: app.root.current = 'hamiltonianScreen'
        Button:
            size_hint: None, None
            size: .3 * app.winSize[0], .1 * app.winSize[1]
            pos_hint: {'center_x': .5, 'center_y': .32}
            text: 'Tutorial'
            on_release: app.root.current = 'tutorialScreen' 
        Button:
            size_hint: None, None
            size: .3 * app.winSize[0], .1 * app.winSize[1]
            pos_hint: {'center_x': .5, 'center_y': .21}
            text: "Credits"
            on_release: app.root.current = 'creditsScreen' 
