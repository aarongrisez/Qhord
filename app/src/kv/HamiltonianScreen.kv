<ChordToggleButton>
    size_hint: 1, .8
    group: "chord"
    on_press: app.screenManager.ids['hamiltonianScreen'].chord = self.text
<Root1ToggleButton>
    size_hint: 1, .8
    group: "root1"
    on_press: app.screenManager.ids['hamiltonianScreen'].root1 = app.pitches.letters[self.text]
<Root2ToggleButton>
    size_hint: 1, .8
    group: "root2"
    on_press: app.screenManager.ids['hamiltonianScreen'].root2 = app.pitches.letters[self.text]

<HamiltonianScreen>:
    BoxLayout:
        canvas.before:
            Color:
	        	rgba: app.colorScheme.Background
            Rectangle:
                size: self.size
                pos: self.pos
        orientation: 'vertical'
        BoxLayout:
            Button:
                size_hint: 0.3, 0.9
                text: "Start App"
                on_release: app.root.current = 'defaultApplicationScreen'
            Button: 
                size_hint: 0.3, 0.9
                text: "Something Else"
                on_release: app.root.current = 'customizeHamiltonianScreen'
            Button:
                size_hint: 0.4, 0.9
                text: "DEBUG"
                on_release: print(root.ids)
        GridLayout:
            cols: 4
            size_hint: 1, 0.3
            ChordToggleButton:
                id: majorChord
                text: "Major"
                group: "chord"
                state: 'down'
            ChordToggleButton:
                id: minorChord
                text: "Minor"
                group: "chord"
            ChordToggleButton:
                id: diminishedChord
                text: "Diminished"
                group: "chord"
            ChordToggleButton:
                id: augmentedChord
                text: "Augmented"
                group: "chord"
        BoxLayout:
            Label:
                text: "First Chord"
                size_hint: 0.3, 1
            GridLayout:
                id: firstChord
                cols: 6
                Root1ToggleButton:
                    id: C
                    text: 'C'
                    state: 'down'
                Root1ToggleButton:
                    id: Cs
                    text: 'C#'
                Root1ToggleButton:
                    id: D
                    text: 'D'
                Root1ToggleButton:
                    id: Ds
                    text: 'D#'
                Root1ToggleButton:
                    id: E
                    text: 'E'
                Root1ToggleButton:
                    id: F
                    text: 'F'
                Root1ToggleButton:
                    id: Fs
                    text: 'F#'
                Root1ToggleButton:
                    id: G
                    text: 'G'
                Root1ToggleButton:
                    id: Gs
                    text: 'G#'
                Root1ToggleButton:
                    id: A
                    text: 'A'
                Root1ToggleButton:
                    id: As
                    text: 'A#'
                Root1ToggleButton:
                    id: B
                    text: 'B'
        BoxLayout:
            Label:
                text: "Second Chord"
                size_hint: 0.3, 1
            GridLayout:
                id: secondChord
                cols: 6
                Root2ToggleButton:
                    id: C
                    text: 'C'
                Root2ToggleButton:
                    id: Cs
                    text: 'C#'
                Root2ToggleButton:
                    id: D
                    text: 'D'
                Root2ToggleButton:
                    id: Ds
                    text: 'D#'
                Root2ToggleButton:
                    id: E
                    text: 'E'
                Root2ToggleButton:
                    id: F
                    text: 'F'
                Root2ToggleButton:
                    id: Fs
                    text: 'F#'
                Root2ToggleButton:
                    id: G
                    text: 'G'
                    state: 'down'
                Root2ToggleButton:
                    id: Gs
                    text: 'G#'
                Root2ToggleButton:
                    id: A
                    text: 'A'
                Root2ToggleButton:
                    id: As
                    text: 'A#'
                Root2ToggleButton:
                    id: B
                    text: 'B'
        BoxLayout:
            size_hint: 1, .4
            Label:
                text: "Transition Speed"
                size_hint: 0.3, .8
            Slider:
                size_hint: 1, .8
                id: frequency_slider
                min: 100
                max: 700
                on_value: root.frequency = self.value / 10.
