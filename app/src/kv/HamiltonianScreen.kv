<HamiltonianScreen>:
    BoxLayout:
        canvas.before:
            Color:
	        	rgba: app.colorScheme.Background
            Rectangle:
                size: self.size
                pos: self.pos
        orientation: 'vertical'
        BoxLayout:
            Button:
                size_hint: 0.3, 0.9
                text: "Start App" 
                on_release: app.root.current = 'keyboardScreen'
        GridLayout:
            cols: 4
            size_hint: 1, 0.3
            ChordToggleButton:
                id: 1-5
                text: "1-5"
                group: "chord"
                state: 'down'
            ChordToggleButton:
                id: 1-3
                text: "1-3"
                group: "chord"
        BoxLayout:
            size_hint: 1, .4
            Label:
                text: "Transition Speed"
                size_hint: 0.3, .8
            Slider:
                size_hint: 1, .8
                id: frequency_slider
                min: 100
                max: 700
                on_value: root.frequency = self.value / 10.
